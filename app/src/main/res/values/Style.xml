<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="welcome_txt">
        <item name="android:textSize">40sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginBottom">60dp</item>
    </style>
    <style name="linear_layout_center">
        <item name="android:gravity">center</item>
        <item name="android:layout_width">match_parent</item>
    </style>
    <style name="item_center">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_marginBottom">20dp</item>
    </style>
    <style name="btn_start">
        <item name="android:layout_width">120dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:background">@drawable/btn_start</item>
    </style>
    <style name="linear_layout_information">
        <item name="android:gravity">center</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_marginTop">40dp</item>
        <item name="android:layout_marginBottom">10dp </item>
    </style>
    <style name="linear_layout_information_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textAlignment">center</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="linear_layout_information_editText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
    </style>
</resources>